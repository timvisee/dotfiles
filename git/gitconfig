[user]
	name = timvisee
	email = tim@visee.me

[core]
	editor = vim

[init]
    defaultBranch = master

[commit]
	gpgsign = true

[tag]
	gpgsign = true
	forceSignAnnotated = true

[diff]
	tool = vimdiff
	algorithm = histogram

[difftool]
	prompt = false

[alias]
	commit = commit -S
	d = difftool

# Enable ReReRe: <https://git-scm.com/book/en/v2/Git-Tools-Rerere>
[rerere]
	enabled = true

# Suggest command fixes: <https://git-scm.com/docs/git-config#Documentation/git-config.txt-helpautoCorrect>
[help]
	autocorrect = prompt
